                    android:layout_height="20dp"
                    android:id="@+id/imageView6"
                    android:src="@mipmap/empty_circle" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/imageView7"
                    android:src="@mipmap/empty_circle" />
            </LinearLayout>
        </LinearLayout>


